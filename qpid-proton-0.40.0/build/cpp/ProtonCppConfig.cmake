function(warn_components_not_found _NAME)
  if (${_NAME}_FIND_QUIETLY)
    return()
  endif()

  foreach(comp ${${_NAME}_FIND_COMPONENTS})
    if(NOT ${_NAME}_${comp}_FOUND)
      MESSAGE(STATUS "Requested ${_NAME} component ${comp} is NOT FOUND")
    endif()
  endforeach()
endfunction()

